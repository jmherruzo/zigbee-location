--This table will save the Rooms information
CREATE TABLE Room(
	id INTEGER PRIMARY KEY,
	width INTEGER,
	length INTEGER
);

--This table will save the information about all the devices installed in each room
CREATE TABLE Device(
	room_id INTEGER,
	id INTEGER,
	x INTEGER,
	y INTEGER,
	is_master INTEGER,
	FOREIGN KEY(room_id) REFERENCES Room(id),
	PRIMARY KEY(room_id, id)
);

--Table for storing all the ping data between nodes
CREATE TABLE Data(
	time INTEGER, --Stored as Unix Time
	room INTEGER,
	origin INTEGER,
	destination INTEGER,
	rssi INTEGER,
	lqi INTEGER,
	FOREIGN KEY(room) REFERENCES Room(id),
	PRIMARY KEY(time, room, origin, destination)
);
	
	